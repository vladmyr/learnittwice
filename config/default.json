{
  "environments": ["development", "staging", "production"],
  "dir": {
    "base": "./app",
    "models": "/models",
    "controllers": "/controllers",
    "domain": "/domain",
    "databaseQueries": "/databaseQueries",
    "logs": "../logs",
    "views": "/views",
    "public": "/public",
    "services": "/services"
  },
  "filePath": {
    "domain": {
      "database": "Database",
      "language": "Language",
      "expressApp": "ExpressApp",
      "databaseQueries": {
        "postQueries": "postQueries.sql"
      }
    },
    "log": {
      "db": "db.log",
      "warning": "warning.log",
      "error": "error.log"
    }
  },
  "db": {
    "isEnabledFileLogging": true,
    "isEnabledConsoleLogging": true
  },
  "entryPoints": {
    "api": {
      "route_root": "/",
      "controllerDir": "controllers/api",
      "mainControllerName": "_default",
      "hasService": true,
      "alias": "api",
      "port": 8081
    },
    "front": {
      "route_root": "/",
      "controllerDir": "controllers/front",
      "mainControllerName": "_default",
      "hasPublic": true,
      "hasService": true,
      "alias": "front",
      "port": 8082
    },
    "admin": {
      "route_root": "/",
      "controllerDir": "controllers/admin",
      "mainControllerName": "_default",
      "hasPublic": true,
      "hasService": true,
      "alias": "admin",
      "port": 8083
    }
  }
}