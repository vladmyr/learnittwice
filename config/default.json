{
  "environments": ["development", "staging", "production"],
  "dir": {
    "base": {
      "app": "./app",
      "admin": "/client/admin",
      "front": "/client/front"
    },
    "models": "/models",
    "controllers": "/controllers",
    "domain": "/domain",
    "databaseQueries": "/databaseQueries",
    "logs": "../logs",
    "views": "/views",
    "public": "/public",
    "services": "/services",
    "templates": "/templates",
    "collections": "/collections"
  },
  "filePath": {
    "domain": {
      "database": "Database",
      "language": "Language",
      "expressApp": "ExpressApp",
      "databaseQueries": {
        "postQueries": "postQueries.sql"
      }
    },
    "log": {
      "db": "db.log",
      "warning": "warning.log",
      "error": "error.log"
    }
  },
  "db": {
    "isEnabledFileLogging": true,
    "isEnabledConsoleLogging": true
  },
  "entryPoints": {
    "api": {
      "type": "plain",
      "routeRoot": "/",
      "controllerDir": "controllers/api",
      "mainControllerName": "_default",
      "hasView": false,
      "hasService": true,
      "alias": "api",
      "port": 8081,
      "protocol": "http"
    },
    "clients": {
      "front": {
        "type": "rendr",
        "routeRoot": "/",
        "controllerDir": "controllers/front",
        "mainControllerName": "_default",
        "hasView": true,
        "hasPublic": true,
        "hasService": true,
        "alias": "front",
        "port": 8082,
        "protocol": "http"
      },
      "admin": {
        "type": "rendr",
        "routeRoot": "/",
        "controllerDir": "controllers/admin",
        "mainControllerName": "_default",
        "hasView": true,
        "hasPublic": true,
        "hasService": true,
        "alias": "admin",
        "port": 8083,
        "protocol": "http"
      }
    }
  }
}